<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical" android:baselineAligned="false">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgViewTS" android:src="@drawable/title" android:layout_gravity="center"
            android:background="@null" android:layout_marginBottom="10dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:id="@+id/editText"
            android:layout_gravity="center"
            android:autoText="false" android:minWidth="250dp" android:hint="type here" android:singleLine="true"
            />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/translate"
            android:layout_gravity="center"
            android:src="@drawable/translate_button" android:background="@null" android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>

</LinearLayout>

